        }

        .rating-star {
            cursor: pointer;
            color: #e4e5e9;
            font-size: 1.2rem;
            padding: 0 2px;
            transition: all 0.2s ease;
        }

        .rating-star:hover,
        .rating-star:hover ~ .rating-star {
            color: #ffd700;
        }

        .rating-star.active,
