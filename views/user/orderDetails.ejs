    <script>
        async function submitRating(productId, rating, container) {
            try {
                const orderId = container.getAttribute('data-order');
                const statusElement = container.nextElementSibling;
                statusElement.textContent = 'Submitting...';

                const response = await fetch('/orders/submit-rating', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        orderId,
                        productId,
                        rating
                    })
                });

                const data = await response.json();

                if (!response.ok) {
                    throw new Error(data.message || 'Failed to submit rating');
                }

                // Update UI to show filled stars
                const stars = container.querySelectorAll('.rating-star');
                stars.forEach((star, index) => {
                    if (index < rating) {
                        star.classList.remove('far');
                        star.classList.add('fas');
                    } else {
                        star.classList.remove('fas');
                        star.classList.add('far');
                    }
                });

                // Show success message
                await Swal.fire({
                    title: 'Thank you!',
                    text: 'Your rating has been submitted successfully',
                    icon: 'success',
                    timer: 2000,
                    showConfirmButton: false
                });

                // Reload page to show updated rating
                location.reload();
            } catch (error) {
                console.error('Error submitting rating:', error);
                const errorMessage = error.message || 'Failed to submit rating';
                
                Swal.fire({
                    title: 'Error!',
                    text: errorMessage,
                    icon: 'error'
                });

                // Reset stars
                const stars = container.querySelectorAll('.rating-star');
                stars.forEach(star => {
                    star.classList.remove('fas');
                    star.classList.add('far');
                });
                container.setAttribute('data-rating', '0');
                
                // Show error in status
                const statusElement = container.nextElementSibling;
                statusElement.textContent = errorMessage;
                statusElement.style.color = '#dc3545';
            }
        }

        // Initialize star rating functionality
        document.addEventListener('DOMContentLoaded', function() {
            const ratingContainers = document.querySelectorAll('.stars');
            
            ratingContainers.forEach(container => {
                const stars = container.querySelectorAll('.rating-star');
                
                stars.forEach(star => {
                    // Hover effect
                    star.addEventListener('mouseenter', () => {
                        const rating = parseInt(star.getAttribute('data-rating'));
                        updateStars(container, rating);
                    });

                    // Click to rate
                    star.addEventListener('click', () => {
                        const rating = parseInt(star.getAttribute('data-rating'));
                        const productId = star.getAttribute('data-product');
                        container.setAttribute('data-rating', rating);
                        submitRating(productId, rating, container);
                    });
                });

                // Reset stars on mouse leave
                container.addEventListener('mouseleave', () => {
                    const currentRating = parseInt(container.getAttribute('data-rating')) || 0;
                    updateStars(container, currentRating);
                });
            });
        });

        function updateStars(container, rating) {
            const stars = container.querySelectorAll('.rating-star');
            stars.forEach((star, index) => {
                if (index < rating) {
                    star.classList.remove('far');
                    star.classList.add('fas');
                } else {
                    star.classList.remove('fas');
                    star.classList.add('far');
                }
            });
        }
    </script>

