<body>
    <%- include('../partials/user/header-no-bg', { user, cartCount }) %>

    <div class="order-details-container">
        <div class="page-title">
            <div class="navigation-btn">
                <a href="/orders" class="btn btn-outline">
                    <i class="fas fa-arrow-left"></i> Back to Orders
                </a>
            </div>
            <h1>Order Details</h1>
            <div class="order-id">#<%= order._id.toString().slice(-8).toUpperCase() %></div>
        </div>

        <div class="order-grid">
            <div class="order-main">


                <div class="order-info-card">
                    <div class="card-header">
                        <h2>Purchased Items</h2>
                    </div>
                    <div class="card-content">
                        <% order.items.forEach(item => { %>
                            <div class="order-item">
                                <img src="<%= item.product.productImage ? item.product.productImage[0] : 'data:image/svg+xml;base64,' %>" 
                                     alt="<%= item.product.name %>"
                                     class="item-image">
                                <div class="item-details">
                                    <div class="item-name"><%= item.product.name.toUpperCase() %></div>
                                    <div class="item-price">
                                        <% if (item.offerDetails && item.offerDetails.hasOffer) { %>
                                            <div class="price-info">
                                                <span class="original-price">₹<%= item.regularPrice.toFixed(2) %></span>
                                                <span class="final-price">₹<%= item.price.toFixed(2) %></span>
                                            </div>
                                        <% } else { %>
                                            <div class="price-info">
                                                <% if (item.product.salesPrice && item.product.salesPrice < item.regularPrice) { %>
                                                    <span class="original-price">₹<%= item.regularPrice.toFixed(2) %></span>
                                                    <span class="final-price">₹<%= item.product.salesPrice.toFixed(2) %></span>
                                                    
                                                    
                                                <% } else { %>
                                                    <span class="final-price">₹<%= item.regularPrice.toFixed(2) %></span>
                                                <% } %>
                                            </div>
                                        <% } %>
                                        <div class="quantity">Quantity: <%= item.quantity %></div>
                                        <div class="item-total">
                                            Line Total: ₹<%= (item.quantity * (
                                                item.offerDetails && item.offerDetails.hasOffer ? item.price : 
                                                (item.product.salesPrice && item.product.salesPrice < item.regularPrice ? item.product.salesPrice : item.regularPrice)
                                            )).toFixed(2) %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>

                <!-- Order Status Tracker (Horizontal) -->
                <div class="order-info-card">
                    <div class="card-header">
                        <h2>Order Status</h2>
                    </div>
                    <div class="card-content">
                        <div class="order-status-tracker d-flex align-items-center justify-content-between" style="gap: 0.5rem;">
                            <% const allSteps = [
                                { status: 'Pending', icon: 'shopping-cart', date: order.createdAt },
                                { status: 'Processing', icon: 'box', date: order.processingDate },
                                { status: 'Shipped', icon: 'truck', date: order.shippedDate },
                                { status: 'Delivered', icon: 'check-circle', date: order.deliveredDate },
                                
                            ];
                            // Dynamically add only the correct final step
                            if (order.orderStatus === 'Return Requested') {
                                allSteps.push({ status: 'Return Requested', icon: 'question-circle', date: order.returnRequestedDate, highlight: 'orange' });
                            } else if (order.orderStatus === 'Return Approved') {
                                allSteps.push({ status: 'Return Approved', icon: 'thumbs-up', date: order.returnApprovedDate, highlight: 'orange', badge: 'fa-check', badgeColor: 'success' });
                            } else if (order.orderStatus === 'Return Rejected') {
                                allSteps.push({ status: 'Return Rejected', icon: 'thumbs-down', date: order.returnRejectedDate, highlight: 'red', badge: 'fa-times', badgeColor: 'danger' });
                            } else if (order.orderStatus === 'Returned') {
                                allSteps.push({ status: 'Returned', icon: 'rotate-left', date: order.returnedDate, reason: order.returnReason, highlight: 'orange', badge: 'fa-check', badgeColor: 'success' });
                            } else if (order.orderStatus === 'Return Cancelled') {
                                allSteps.push({ status: 'Return Cancelled', icon: 'ban', date: order.returnCancelledDate, reason: order.returnCancelReason, highlight: 'red', badge: 'fa-times', badgeColor: 'danger' });
                            } else if (order.orderStatus === 'Cancelled') {
                                allSteps.push({ status: 'Cancelled', icon: 'times', date: order.cancelledDate, reason: order.cancellationReason, highlight: 'red', badge: 'fa-times', badgeColor: 'danger' });
                            }
                            let foundActive = false;
                            allSteps.forEach((item, idx) => {
                                const isActive = !foundActive && order.orderStatus === item.status;
                                const isComplete = item.date && allSteps.findIndex(s => s.status === order.orderStatus) > idx;
                                if (isActive) foundActive = true;
                            %>
                                <div class="status-step text-center<%= isActive ? ' active' : '' %>" style="flex:1; min-width:90px;">
                                    <div class="status-icon mb-1 <%= 
                                        isActive ? 'bg-primary text-white border border-warning shadow-lg' : 
                                        idx < allSteps.findIndex(s => s.status === order.orderStatus) ? 'bg-success text-white' : 
                                        'bg-light text-secondary' 
                                    %>" style="width:<%= isActive ? '50px' : '38px' %>;height:<%= isActive ? '50px' : '38px' %>;display:inline-flex;align-items:center;justify-content:center;border-radius:50%;margin-bottom:4px;font-size:<%= isActive ? '1.6rem' : '1.3rem' %>;box-shadow:<%= isActive ? '0 0 16px 2px rgba(255,190,51,0.19)' : (idx < allSteps.findIndex(s => s.status === order.orderStatus) ? '0 0 8px 1px rgba(40,167,69,0.10)' : 'none') %>;transition:all 0.2s;position:relative;">
                                        <i class="fas fa-<%= item.icon %>"></i>
                                        
                                    </div>
                                    <div class="status-label small"><%= item.status %>
                                        <% if ((item.status === 'Returned' || item.status === 'Return Cancelled' || item.status === 'Cancelled') && item.date) { %>
                                            <span class="d-block small text-muted">
                                                <%= new Date(item.date).toLocaleString() %>
                                            </span>
                                            <% if (item.reason) { %>
                                                <span class="d-block small <%= item.highlight === 'red' ? 'text-danger' : 'text-success' %>">Reason: <%= item.reason %></span>
                                            <% } %>
                                        <% } %>
                                    </div>
                                </div>
                                <% if (idx < allSteps.length-1) { %>
                                    <div class="tracker-line" style="height:4px;flex:1;background:<%= isComplete ? '#28a745' : '#dee2e6' %>;margin:0 2px;border-radius:2px;"></div>
                                <% } %>
                            <% }); %>

                        </div>
                    </div>
                </div>
            </div>

            <div class="order-summary">
                <div class="order-info-card price-summary">
                    <div class="card-header">
                        <h2>Price Details</h2>
                    </div>
                    <div class="card-content">
                        <div class="price-row">
                            <span>Items Total</span>
                            <span>₹<%= order.items.reduce((sum, item) => sum + (item.price * item.quantity), 0).toFixed(2) %></span>
                        </div>
                        
                        <% if (order.couponDiscount && order.couponDiscount > 0) { %>
                            <div class="price-row discount">
                                <span>Coupon Applied</span>
                                <span>-₹<%= order.couponDiscount.toFixed(2) %></span>
                            </div>
                        <% } %>

                        <div class="price-row">
                            <span>Delivery Fee</span>
                            <% if (order.deliveryCharge > 0) { %>
                                <span>₹<%= order.deliveryCharge.toFixed(2) %></span>
                            <% } else { %>
                                <span class="free">FREE</span>
                            <% } %>
                        </div>

                        <div class="price-row total">
                            <span>Total Amount</span>
                            <span>
                              ₹<%=
                                (
                                  order.items.reduce((sum, item) => sum + (item.price * item.quantity), 0)
                                  - (order.couponDiscount || 0)
                                  + (order.deliveryCharge || 0)
                                ).toFixed(2)
                              %>
                            </span>
                        </div>

                        <% if (order.totalSavings > 0) { %>
                            <div class="total-savings">
                                <i class="fas fa-piggy-bank"></i>
                                You Saved ₹<%= order.totalSavings.toFixed(2) %>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

