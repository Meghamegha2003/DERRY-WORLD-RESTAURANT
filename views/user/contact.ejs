<%- include('../partials/user/header-no-bg') %>
<style>
    body {
        background: #f8f9fa;
    }
    .contact_section {
        padding: 60px 0 40px 0;
        background: linear-gradient(120deg, #f6d365 0%, #fda085 100%);
        min-height: 100vh;
    }
    .contact-card {
        background: #fff;
        border-radius: 18px;
        box-shadow: 0 8px 32px rgba(60,60,60,0.08);
        padding: 40px 30px 30px 30px;
        margin-bottom: 30px;
        transition: box-shadow 0.2s;
    }
    .contact-card:hover {
        box-shadow: 0 16px 48px rgba(60,60,60,0.14);
    }
    .contact-form input,
    .contact-form textarea {
        border-radius: 8px;
        border: 1px solid #ddd;
        margin-bottom: 18px;
        font-size: 1rem;
        box-shadow: none;
        transition: border-color 0.2s;
    }
    .contact-form input:focus,
    .contact-form textarea:focus {
        border-color: #ffbe33;
        outline: none;
    }
    .contact-form label {
        font-weight: 600;
        color: #222;
        margin-bottom: 6px;
    }
    .contact-form .btn-pro {
        background: linear-gradient(90deg, #ffbe33 0%, #fda085 100%);
        color: #fff;
        border: none;
        border-radius: 25px;
        padding: 12px 36px;
        font-weight: 700;
        font-size: 1.1rem;
        box-shadow: 0 4px 18px rgba(255,190,51,0.14);
        transition: background 0.3s, box-shadow 0.3s;
        letter-spacing: 1px;
    }
    .contact-form .btn-pro:hover {
        background: linear-gradient(90deg, #fda085 0%, #ffbe33 100%);
        box-shadow: 0 8px 32px rgba(255,190,51,0.22);
        color: #222;
    }
    .contact_info_box {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 18px rgba(60,60,60,0.07);
        padding: 25px 20px;
        margin-bottom: 18px;
        display: flex;
        align-items: flex-start;
        gap: 18px;
    }
    .contact_info_box i {
        color: #ffbe33;
        font-size: 2.1rem;
        margin-right: 8px;
        margin-top: 3px;
    }
    .contact_info_box h3 {
        font-size: 1.1rem;
        margin-bottom: 7px;
        color: #222;
        font-weight: 700;
    }
    .contact_info_box p {
        color: #555;
        margin-bottom: 0;
        font-size: 1rem;
        line-height: 1.4;
    }
    @media (max-width: 767px) {
        .contact-card {
            padding: 22px 10px 18px 10px;
        }
    }
</style>

<section class="contact_section">
    <div class="container">
        <div class="row justify-content-center mb-4">
            <div class="col-lg-8 text-center">
                <h2 class="display-5 fw-bold mb-3" style="color:#222; letter-spacing:1px;">Contact Us</h2>
                <p class="lead" style="color:#444;">We'd love to hear from you. Fill out the form and our team will get back to you as soon as possible.</p>
            </div>
        </div>
        <div class="row align-items-stretch">
            <div class="col-lg-7 mb-4">
                <div class="contact-card">
                    <form id="contactForm" class="contact-form">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="name"><i class="fa fa-user"></i> Name</label>
                                <input type="text" class="form-control" id="name" name="name" placeholder="Your Name" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="email"><i class="fa fa-envelope"></i> Email</label>
                                <input type="email" class="form-control" id="email" name="email" placeholder="Email Address" required />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="phone"><i class="fa fa-phone"></i> Phone</label>
                            <input type="text" class="form-control" id="phone" name="phone" placeholder="Phone Number" pattern="\d{10}" maxlength="10" required />
                        </div>
                        <div class="mb-3">
                            <label for="message"><i class="fa fa-commenting"></i> Message</label>
                            <textarea class="form-control" id="message" name="message" rows="5" placeholder="Type your message here..." required></textarea>
                        </div>
                        <div class="text-end">
                            <button type="submit" class="btn btn-pro">Send Message <i class="fa fa-paper-plane ms-2"></i></button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-5 mb-4">
                <div class="contact-card h-100 d-flex flex-column justify-content-between">
                    <div>
                        <div class="contact_info_box mb-3">
                            <i class="fa fa-map-marker"></i>
                            <div>
                                <h3>Address</h3>
                                <p>123 Food Street, Bangalore, Karnataka 560001</p>
                            </div>
                        </div>
                        <div class="contact_info_box mb-3">
                            <i class="fa fa-phone"></i>
                            <div>
                                <h3>Phone</h3>
                                <p>+91 98765 43210</p>
                            </div>
                        </div>
                        <div class="contact_info_box mb-3">
                            <i class="fa fa-envelope"></i>
                            <div>
                                <h3>Email</h3>
                                <p>info@derryworld.com</p>
                            </div>
                        </div>
                    </div>
                    <div class="map_container mt-4">
                        <div class="map" style="border-radius:12px; overflow:hidden;">
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3887.985690589861!2d77.51009007381517!3d12.972773987301305!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bae3dd6de52a5e5%3A0x7f4d1a54c8b22a05!2sDerry%20World!5e0!3m2!1sen!2sin!4v1709494161006!5m2!1sen!2sin" width="100%" height="180" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
document.getElementById('contactForm').addEventListener('submit', async function(e) {
    e.preventDefault();
    const form = this;
    const formData = new FormData(form);
    const data = Object.fromEntries(formData.entries());
    // Simple UI feedback
    const btn = form.querySelector('button[type="submit"]');
    btn.disabled = true;
    btn.innerHTML = 'Sending... <i class="fa fa-spinner fa-spin"></i>';
    try {
        const response = await fetch('/contact', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(data)
        });
        const result = await response.json();
        if (result.success) {
            btn.innerHTML = 'Sent! <i class="fa fa-check"></i>';
            setTimeout(() => { btn.innerHTML = 'Send Message <i class="fa fa-paper-plane ms-2"></i>'; btn.disabled = false; }, 2000);
            form.reset();
            Swal.fire({
                icon: 'success',
                title: 'Message Sent!',
                text: 'Thank you for your message. We will get back to you soon!',
                confirmButtonColor: '#ffbe33'
            });
        } else {
            btn.innerHTML = 'Send Message <i class="fa fa-paper-plane ms-2"></i>';
            btn.disabled = false;
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: result.message || 'Something went wrong. Please try again.',
                confirmButtonColor: '#ffbe33'
            });
        }
    } catch (error) {
        btn.innerHTML = 'Send Message <i class="fa fa-paper-plane ms-2"></i>';
        btn.disabled = false;
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: 'Something went wrong. Please try again.',
            confirmButtonColor: '#ffbe33'
        });
    }
});
</script>
