                });
                
                const data = await response.json();
                
                if (data.success) {
                    // Update quantity input
                    const quantityInput = document.querySelector(`[data-product-id="${productId}"] .quantity-input`);
                    if (quantityInput) {
                        quantityInput.value = data.newQuantity;
                    }
                    
                    // Update quantity controls
                    updateQuantityControls(productId, data.newQuantity);
                    
                    // Update cart totals
                    updateCartTotals(data.cart);
                    
                    Swal.fire({
                        icon: 'success',
                        title: 'Cart updated!',
                        showConfirmButton: false,
                        timer: 800
                    });
                } else {
                    Swal.fire({ icon: 'error', title: 'Error', text: data.message || 'Failed to update quantity' });
                }
            } catch (error) {
                Swal.fire({ icon: 'error', title: 'Error', text: 'Failed to update quantity' });
            }
        }

        function updateQuantityControls(productId, newQuantity) {
            const controlsContainer = document.querySelector(`[data-product-id="${productId}"] .quantity-controls`);
            if (!controlsContainer) return;
            
            // Remove existing buttons
            const existingButtons = controlsContainer.querySelectorAll('.quantity-btn');
            existingButtons.forEach(btn => btn.remove());
            
            const quantityInput = controlsContainer.querySelector('.quantity-input');
            if (!quantityInput) return;
            
            // Add decrease button if quantity > 1
            if (newQuantity > 1) {
                const decreaseBtn = document.createElement('button');
                decreaseBtn.className = 'quantity-btn decrease-btn';
                decreaseBtn.innerHTML = '<i class="fas fa-minus"></i>';
                decreaseBtn.onclick = () => updateQuantity(productId, 'decrease', newQuantity);
                controlsContainer.insertBefore(decreaseBtn, quantityInput);
            }
            
            // Add increase button if quantity < 5
            if (newQuantity < 5) {
                const increaseBtn = document.createElement('button');
                increaseBtn.className = 'quantity-btn increase-btn';
                increaseBtn.innerHTML = '<i class="fas fa-plus"></i>';
                increaseBtn.onclick = () => updateQuantity(productId, 'increase', newQuantity);
                controlsContainer.appendChild(increaseBtn);
            }
        }

        function updateCartTotals(cartData) {
            
            // Handle different response formats
            const totals = cartData.totals || cartData;
            const subtotal = totals.subtotal || cartData.subtotal;
            const couponDiscount = totals.couponDiscount || cartData.couponDiscount || 0;
            const total = totals.total || cartData.total;
            
            
            // Update subtotal
            const subtotalElement = document.getElementById('subtotal');
            if (subtotalElement && subtotal !== undefined) {
                subtotalElement.textContent = `₹${Number(subtotal).toFixed(2)}`;
            }
            
            // Handle discount display
            const discountRow = document.querySelector('.total-item.discount');
            const discountElement = document.getElementById('coupon-discount');
            
            if (couponDiscount && Number(couponDiscount) > 0) {
                if (discountRow) {
                    // Update existing discount row
                    discountRow.style.display = 'flex';
                    if (discountElement) {
                        discountElement.textContent = `-₹${Number(couponDiscount).toFixed(2)}`;
                    }
                } else {
                    // Create new discount row
                    const cartTotals = document.querySelector('.cart-totals');
                    const deliveryRow = cartTotals.querySelector('.total-item:nth-child(2)');
                    const newDiscountRow = document.createElement('div');
                    newDiscountRow.className = 'total-item discount';
                    newDiscountRow.style.display = 'flex';
                    newDiscountRow.innerHTML = `
                        <span>Coupon Discount</span>
                        <span id="coupon-discount">-₹${Number(couponDiscount).toFixed(2)}</span>
                    `;
                    
                    if (deliveryRow) {
                        cartTotals.insertBefore(newDiscountRow, deliveryRow);
                    } else {
                        // Insert before total row
                        const totalRow = cartTotals.querySelector('.total-item.total');
                        if (totalRow) {
                            cartTotals.insertBefore(newDiscountRow, totalRow);
                        }
                    }
                }
            } else {
                // Hide discount row when no discount
                if (discountRow) {
                    discountRow.style.display = 'none';
                }
            }
            
            // Update total
            const totalElement = document.getElementById('total');
            if (totalElement && total !== undefined) {
                totalElement.textContent = `₹${Number(total).toFixed(2)}`;
            }
            
            // Update cart count in header
            if (cartData.itemCount !== undefined) {
                const cartCountEl = document.getElementById('cart-count');
                if (cartCountEl) {
                    cartCountEl.textContent = cartData.itemCount;
                }
            }
            
        }
        
        // Event listeners
        document.addEventListener('DOMContentLoaded', function() {
            const closeBtn = document.getElementById('closeCouponModal');
            const applyBtn = document.getElementById('applyCouponBtn');
            const modal = document.getElementById('couponModal');
            const input = document.getElementById('couponCodeInput');
            
            if (closeBtn) closeBtn.onclick = closeCouponModal;
            if (modal) modal.onclick = (e) => { if (e.target === modal) closeCouponModal(); };
            if (input) input.onkeypress = (e) => { if (e.key === 'Enter') applyCouponFromModal(); };
            if (applyBtn) applyBtn.onclick = () => applyCouponFromModal();

            // Add event listeners to quantity buttons
            document.querySelectorAll('.quantity-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const productId = this.getAttribute('data-product-id');
                    const action = this.getAttribute('data-action');
                    const currentQuantity = parseInt(this.closest('.quantity-controls').querySelector('.quantity-input').value);
                    updateQuantity(productId, action, currentQuantity);
                });
            });
        });
    </script>

