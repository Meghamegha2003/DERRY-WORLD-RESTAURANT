            border-bottom: none;
        }

        .total-item span:first-child {
            font-weight: 500;
            color: #333;
        }

        .total-item span:last-child {
            font-weight: 600;
            color: #2c3e50;
        }

        .total-item.total {
            margin-top: 10px;
            padding-top: 15px;
            border-top: 2px solid #eee;
            border-bottom: none;
            font-size: 18px;
        }

        .total-item.total span:first-child {
            font-weight: 600;
            color: #1a1a1a;
        }

        .total-item.total span:last-child {
            font-weight: 700;
            color: #ffbe33;
            font-size: 20px;
        }

        .total-item.discount {
            background: #f8fff8;
            margin: 10px -25px;
            padding: 15px 25px;
            border-bottom: none;
        }

        .total-item.discount span:last-child {
            color: #f57c00;
            font-weight: 500;
        }
    </style>
</head>

<body class="sub_page">
    <%- include('../partials/user/header-no-bg', { user, cartCount }) %>

    <div class="cart-container">
        <div class="container">
            <% try { %>
                <% if (!cartItems || cartItems.length === 0) { %>
                    <div class="empty-cart text-center">
                        <img src="/images/empty-cart.png" alt="Empty Cart" class="empty-cart-img mb-4" style="max-width: 200px;">
                        <h3 class="empty-cart-title mb-4">Your cart is empty</h3>
                        <p class="empty-cart-text mb-4">Looks like you haven't added any items to your cart yet.</p>
                        <a href="/menu" class="btn btn-primary">Continue Shopping</a>
                    </div>
                <% } else { %>
                    <div class="row">
                        <!-- Cart Items -->
                        <div class="col-lg-8">
                            <div class="cart-items-container">
                                <div class="cart-items-scroll">
                                    <% cartItems.forEach(item => { %>
                                        <% if (item && item.product) { %>
                                            <div class="cart-item" data-product-id="<%= item.product._id %>">
                                                <div class="row align-items-center w-100">
                                                    <!-- Product Image -->
                                                    <div class="col-md-2">
                                                        <img src="<%= item.product.productImage && Array.isArray(item.product.productImage) && item.product.productImage.length > 0 ? item.product.productImage[0] : item.product.productImage %>" 
                                                             alt="<%= item.product.name %>" 
                                                             class="product-img"
                                                             onerror="this.src='data:image/svg+xml;base64,'">
                                                    </div>
                                                    
                                                    <!-- Product Details -->
                                                    <div class="col-md-4">
                                                        <h5 class="product-name"><%= item.product.name %></h5>
                                                        <% if (item.product.category && item.product.category.isBlocked) { %>
                                                            <div class="alert alert-danger" style="padding: 6px 10px; margin-bottom: 8px; font-size: 13px;">
                                                                This product is <b>unavailable</b> (category blocked).
                                                            </div>
                                                        <% } %>
                                                        <div class="product-price">
    <span class="original-price">₹<%= item.product.regularPrice ? item.product.regularPrice.toFixed(2) : '0.00' %></span>
<% if (item.product.offerDetails && item.product.offerDetails.finalPrice) { %>
    <span class="current-price item-price" data-price="<%= item.product.offerDetails.finalPrice %>">₹<%= item.product.offerDetails.finalPrice %></span>
<% } else if (item.product.salesPrice && item.product.salesPrice < item.product.regularPrice) { %>
    <span class="current-price item-price" data-price="<%= item.product.salesPrice %>">₹<%= item.product.salesPrice %></span>
<% } else { %>
    <span class="current-price item-price" data-price="<%= item.product.regularPrice %>">₹<%= item.product.regularPrice %></span>
<% } %>
</div>
                                                    </div>

                                                    <!-- Quantity Controls -->
                                                    <div class="col-md-3">
                                                        <div class="quantity-controls">
                                                            <button
                                                                class="quantity-btn decrease-btn"
                                                                data-product-id="<%= item.product._id %>"
                                                                data-action="decrease"
                                                                data-stock="<%= item.product.quantity %>"
                                                                <%= item.quantity <= 1 || (item.product.category && item.product.category.isBlocked) ? 'disabled' : '' %>
                                                            >
                                                                <i class="fas fa-minus"></i>
                                                            </button>
                                                            <input type="text" class="quantity-input" value="<%= item.quantity %>" readonly>
                                                            <button
                                                                class="quantity-btn increase-btn"
                                                                data-product-id="<%= item.product._id %>"
                                                                data-action="increase"
                                                                data-stock="<%= item.product.quantity %>"
                                                                <%= item.quantity >= 5 || (item.product.category && item.product.category.isBlocked) ? 'disabled' : '' %>
                                                            >
                                                                <i class="fas fa-plus"></i>
                                                            </button>
                                                        </div>
                                                    </div>

                                                    <!-- Remove Button -->
                                                    <div class="col-md-2 text-right">
                                                        <button class="remove-btn" onclick="removeFromCart('<%= item.product._id %>')">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        <% } %>
                                    <% }); %>
                                </div>
                            </div>
                        </div>

                        <!-- Order Summary -->
                        <div class="col-lg-4">
                            <div class="cart-summary">
                                <h4 class="summary-title">Order Summary</h4>
                                
                                <!-- Coupon Section First -->
                                <div class="coupon-section mb-4">
  <% if (cart && cart.couponCode && cart.couponDiscount > 0) { %>
    <div class="applied-coupon">
      <div class="coupon-badge">
        <div class="coupon-badge-content">
          <i class="fas fa-tag"></i>
          <div class="coupon-info">
            <div class="coupon-code-text"><%= cart.couponCode %></div>
            <div class="coupon-discount">-₹<%= cart.couponDiscount.toFixed(2) %></div>
          </div>
        </div>
        <button class="remove-coupon-btn" onclick="removeCoupon()">
          <i class="fas fa-times"></i>
        </button>
      </div>
    </div>
  <% } else { %>
    <button class="apply-coupon-btn" id="openCouponModal">
      <i class="fas fa-tag"></i>
      <span>Apply Coupon</span>
    </button>
  <% } %>
</div>

                                <div class="cart-totals">
                                    <div class="total-item">
                                        <span>Subtotal</span>
                                        <span id="subtotal">
₹<%=
  cartItems && cartItems.length > 0
    ? cartItems.reduce((sum, item) => {
        let price = (item.product.offerDetails && item.product.offerDetails.finalPrice)
          ? item.product.offerDetails.finalPrice
          : (item.product.salesPrice && item.product.salesPrice < item.product.regularPrice)
            ? item.product.salesPrice
            : item.product.regularPrice;
        return sum + (price * item.quantity);
      }, 0).toFixed(2)
    : '0.00'
%>
</span>
                                    </div>
                                    <% if (cart && cart.couponDiscount > 0) { %>
                                        <div class="total-item discount">
                                            <span>Coupon Discount</span>
                                            <span id="coupon-discount">-₹<%= cart.couponDiscount.toFixed(2) %></span>
                                        </div>
                                    <% } %>
                                    <div class="total-item">
                                        <span>Delivery Charge</span>
                                        <span id="delivery-charge">₹<%= deliveryCharge ? deliveryCharge.toFixed(2) : '0.00' %></span>
                                    </div>
                                    <div class="total-item total">
                                        <span>Total</span>
                                        <span id="total">
₹<%=
  cartItems && cartItems.length > 0
    ? (
        cartItems.reduce((sum, item) => {
          let price = (item.product.offerDetails && item.product.offerDetails.finalPrice)
            ? item.product.offerDetails.finalPrice
            : (item.product.salesPrice && item.product.salesPrice < item.product.regularPrice)
              ? item.product.salesPrice
              : item.product.regularPrice;
          return sum + (price * item.quantity);
        }, 0)
        + (deliveryCharge || 0)
        - (cart && cart.couponDiscount ? cart.couponDiscount : 0)
      ).toFixed(2)
    : '0.00'
%>
</span>
                                    </div>
                                </div>
                                <a href="/checkout" class="checkout-btn">
                                    <span>Proceed to Checkout</span>
                                    <i class="fas fa-arrow-right"></i>
                                </a>
                                <style>
                                    .checkout-btn {
                                        display: flex;
                                        align-items: center;
                                        justify-content: center;
                                        gap: 10px;
                                        width: 100%;
                                        padding: 16px;
                                        margin-top: 20px;
                                        background: linear-gradient(135deg, #ffbe33 0%, #fd7e14 100%);
                                        color: white;
                                        border: none;
                                        border-radius: 8px;
                                        font-size: 1rem;
                                        font-weight: 600;
                                        text-decoration: none;
                                        transition: all 0.3s ease;
                                        box-shadow: 0 2px 4px rgba(253, 126, 20, 0.2);
                                    }

                                    .checkout-btn:hover {
                                        background: linear-gradient(135deg, #fd7e14 0%, #ffbe33 100%);
                                        transform: translateY(-2px);
                                        box-shadow: 0 4px 8px rgba(253, 126, 20, 0.3);
                                        text-decoration: none;
                                        color: white;
                                    }

                                    .checkout-btn i {
                                        font-size: 0.9rem;
                                        transition: transform 0.3s ease;
                                    }

                                    .checkout-btn:hover i {
                                        transform: translateX(4px);
                                    }
                                </style>
                            </div>
                        </div>
                    </div>
                <% } %>
            <% } catch (error) { %>
                <div class="error-message text-center">
                    <p>Error loading cart items</p>
                    <a href="/menu" class="btn btn-primary">Continue Shopping</a>
                </div>
            <% } %>
        </div>
    </div>

