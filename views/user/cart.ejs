<body class="sub_page">
    <%- include('../partials/user/header-no-bg', { user, cartCount }) %>

    <div class="cart-container">
        <div class="container">
            <% try { %>
                <% if (!cartItems || cartItems.length === 0) { %>
                    <div class="empty-cart text-center py-5 my-5">
                        <div class="empty-cart-inner bg-white p-5 rounded-3 shadow-sm" style="max-width: 500px; margin: 0 auto;">
                            <div class="empty-cart-icon mb-4">
                                <i class="fas fa-shopping-cart" style="font-size: 4rem; color: #ffbe33;"></i>
                            </div>
                            <h3 class="empty-cart-title mb-3" style="color: #2c3e50; font-weight: 600;">Your Cart is Empty</h3>
                            <p class="empty-cart-text mb-4" style="color: #7f8c8d; font-size: 1.1rem;">Looks like you haven't added any items to your cart yet.</p>
                            <a href="/menu" class="btn btn-warning text-white px-4 py-2" style="background: linear-gradient(135deg, #ffbe33 0%, #fd7e14 100%); border: none; border-radius: 8px; font-weight: 500; transition: all 0.3s ease;">
                                <i class="fas fa-utensils me-2"></i>Explore Our Menu
                            </a>
                        </div>
                    </div>
                <% } else { %>
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="cart-items-container">
                                <div class="cart-items-scroll">
                                    <% cartItems.forEach(item => { %>
                                        <% if (item && item.product) { %>
                                            <div class="cart-item" id="cart-item-<%= item.product._id %>" data-product-id="<%= item.product._id %>">
                                                <div class="row align-items-center w-100">
                                                    <div class="col-md-2">
                                                        <img src="<%= item.product.productImage && Array.isArray(item.product.productImage) && item.product.productImage.length > 0 ? item.product.productImage[0] : item.product.productImage %>" 
                                                             alt="<%= item.product.name %>" 
                                                             class="product-img"
                                                             onerror="this.src='data:image/svg+xml;base64,'">
                                                    </div>
                                                    
                                                    <!-- Product Details -->
                                                    <div class="col-md-4">
                                                        <h5 class="product-name"><%= item.product.name %></h5>
                                                        <% if (item.product.category && item.product.category.isBlocked) { %>
                                                            <div class="alert alert-danger" style="padding: 6px 10px; margin-bottom: 8px; font-size: 13px;">
                                                                This product is <b>unavailable</b> (category blocked).
                                                            </div>
                                                        <% } %>
                                                        <div class="product-price">
                                                            <span class="original-price">₹<%= item.product.regularPrice ? item.product.regularPrice.toFixed(2) : '0.00' %></span>
                                                        <% if (item.product.offerDetails && item.product.offerDetails.finalPrice) { %>
                                                            <span class="current-price item-price" data-price="<%= item.product.offerDetails.finalPrice %>">₹<%= item.product.offerDetails.finalPrice %></span>
                                                        <% } else if (item.product.salesPrice && item.product.salesPrice < item.product.regularPrice) { %>
                                                            <span class="current-price item-price" data-price="<%= item.product.salesPrice %>">₹<%= item.product.salesPrice %></span>
                                                        <% } else { %>
                                                            <span class="current-price item-price" data-price="<%= item.product.regularPrice %>">₹<%= item.product.regularPrice %></span>
                                                        <% } %>
                                                        </div>
                                                    </div>

                                                    <!-- Quantity Controls -->
                                                  <div class="col-md-3" data-product-id="<%= item.product._id %>">
                                                    <div class="quantity-controls">
                                                        <% const isBlocked = item.product.category && item.product.category.isBlocked; %>

                                                        <% if (item.quantity > 1 && !isBlocked) { %>
                                                        <button
                                                            class="quantity-btn decrease-btn"
                                                            data-product-id="<%= item.product._id %>"
                                                            data-action="decrease"
                                                            data-stock="<%= item.product.quantity %>"
                                                        >
                                                            <i class="fas fa-minus"></i>
                                                        </button>
                                                        <% } %>

                                                        <input type="text" class="quantity-input" value="<%= item.quantity %>" readonly>

                                                        <% if (item.quantity < 5 && item.quantity < item.product.quantity && !isBlocked) { %>
                                                        <button
                                                            class="quantity-btn increase-btn"
                                                            data-product-id="<%= item.product._id %>"
                                                            data-action="increase"
                                                            data-stock="<%= item.product.quantity %>"
                                                        >
                                                            <i class="fas fa-plus"></i>
                                                        </button>
                                                        <% } %>
                                                    </div>
                                                    </div>


                                                    <!-- Remove Button -->
