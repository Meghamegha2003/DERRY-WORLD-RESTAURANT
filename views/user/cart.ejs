            const couponCode = code || document.getElementById('couponCodeInput').value;
            if (!couponCode) {
                Swal.fire({ icon: 'warning', title: 'Please enter a coupon code' });
                return;
            }
            
            try {
                const response = await fetch('/cart/coupons/apply', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ code: couponCode }),
                    credentials: 'same-origin'
                });
                
                const data = await response.json();
                
                if (data.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Coupon applied successfully!',
                        text: data.message,
                        showConfirmButton: false,
                        timer: 1200
                    });
                    closeCouponModal();
                    
                    // Update UI without page reload
                    updateCouponSection(couponCode, data.cart || data);
                    updateCartTotals(data.cart || data);
                } else {
                    Swal.fire({ icon: 'error', title: 'Oops...', text: data.message || 'Failed to apply coupon' });
