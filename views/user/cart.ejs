    <style>
        .coupon-modal-overlay {
            position: fixed;
            top: 0; left: 0; width: 100vw; height: 100vh;
            background: rgba(30, 34, 43, 0.45);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 1050;
        }
        .coupon-modal-content {
            background: #fff;
            border-radius: 18px;
            box-shadow: 0 8px 32px rgba(0,0,0,0.18);
            padding: 2.5rem 2rem 2rem 2rem;
